!!!
%html
  %head
    %title Search the Moorestown Newspaper Indexes
    :css
      /**/
        body { font-family: sans-serif; }
        form { margin-left: auto; margin-right: auto; width: 85%; }
        .formsubhead { padding-top: 1em; }
        .left { float: left; }
        .right { float: right; margin-left: 30px; }
        #options{ font-size: 65%;}
      /**/
  %body
    %h1
      Search the Moorestown Newspaper Indexes
    %form{:action => "search.php", :method => "post"}
      %div.left
        %p.formsubhead Search string:
        %input{:name => "term", :size => "30", :type => "text"}/
        %br/
        %br/
        %input{:name => "submit", :type => "submit", :value => "Submit"}/
        %input{:type => "reset", :value => "Reset!"}/
      %div.right
        %p.formsubhead Options:
        %div.left
          %dl#options
            %dt{:title => "some stuff"} Date sort:
            %dd
              %br/
              %input{:checked => "checked", :name => "dsort", :type => "radio", :value => "desc"}/
              descending
              %br/
              %br/
              %input{:name => "dsort", :type => "radio", :value => "asc"}/
              ascending
              %br/
              %br/
            %dt Date range (yyyy-mm-dd):
            %dd
              %br/
              Start date:
              %input{:name => "startdate", :size => "10", :type => "text", :value => "1923-01-01"}/
              %br/
              %br/
              End date:
              %input{:name => "enddate", :size => "10", :type => "text", :value => "2006-12-31"}/
              %br/
              %br/
          %dl 
        %div.right
          %dl#options
            %dt Newspaper:
            %dd
              %br/
              %input{:name => "paper[1]", :type => "checkbox", :value => "Moorestown News", :checked => "checked"}/
              Moorestown News
            %dd
              %br/
              %input{:name => "paper[2]", :type => "checkbox", :value => "News Chronicle", :checked => "checked"}/
              News Chronicle
            %dd
              %br/
              %input{:name => "paper[3]", :type => "checkbox", :value => "News Weekly", :checked => "checked"}/
              News Weekly
    
            %dd
              %br/
              %input{:name => "paper[4]", :type => "checkbox", :value => "Moorestown Sun", :checked => "checked"}/
              Moorestown Sun
            %dt Photo:
            %dd
              %br/
              %input{:name => "photo", :type => "checkbox", :value => "Yes"}/
              has photo
    
